<?xml version="1.0" encoding="UTF-8" ?>
<sites>
    <!--注意：如果css选择器写错会导致抛出异常-->
    <site>
        <title>顶点小说</title>
        <charset>GBK</charset>
        <url>https://www.x23us.com</url>
        <!--小说书名-->
        <book-name>.bdsub dl dd h1</book-name>
        <!--章节列表-->
        <chapter-list-selector>#at td a</chapter-list-selector>
        <!--标题-->
        <chapter-detail-title-selector>#amain h1,0</chapter-detail-title-selector>
        <!--内容-->
        <chapter-detail-content-selector>#contents</chapter-detail-content-selector>
        <!--前一章-->
        <chapter-detail-prev-selector>#footlink a</chapter-detail-prev-selector>
        <!--后一章-->
        <chapter-detail-next-selector>#footlink a,2</chapter-detail-next-selector>
    </site>

    <site>
        <title>笔趣阁</title>
        <charset>gbk</charset>
        <url>http://www.biquge.com.tw</url>
        <!--小说书名-->
        <book-name>#info h1</book-name>
        <!--章节列表-->
        <chapter-list-selector>#list dd a</chapter-list-selector>
        <!--标题  . 代表找class   #代表找id-->
        <chapter-detail-title-selector>.bookname h1</chapter-detail-title-selector>
        <!--内容-->
        <chapter-detail-content-selector>#content</chapter-detail-content-selector>
        <!--前一章-->
        <chapter-detail-prev-selector>#bottem1 a,1</chapter-detail-prev-selector>
        <!--后一章-->
        <chapter-detail-next-selector>#bottem1 a,3</chapter-detail-next-selector>
    </site>

    <site>
        <title>看书中</title>
        <charset>GBK</charset>
        <url>http://www.kanshuzhong.com/</url>
        <!--小说书名-->
        <book-name>.book_title h1</book-name>
        <!--章节列表-->
        <chapter-list-selector>.bookcontent dd a</chapter-list-selector>
        <!--标题  . 代表找class   #代表找id-->
        <chapter-detail-title-selector>#nr1 .ctitle</chapter-detail-title-selector>
        <!--内容-->
        <chapter-detail-content-selector>.textcontent</chapter-detail-content-selector>
        <!--前一章-->
        <chapter-detail-prev-selector>.readlink a,1</chapter-detail-prev-selector>
        <!--后一章-->
        <chapter-detail-next-selector>.readlink a,3</chapter-detail-next-selector>
        <!--选取书名目录-->
        <novel-selector>.book_list tr</novel-selector>
        <!--判断此书名目录是否有下一页-->
        <novel-next-page-selector>#pagelink .next</novel-next-page-selector>
    </site>

    <site>
        <!--https://www.bxwx9.org/b/176/176884/index.html-->
        <title>笔下文学</title>
        <charset>utf-8</charset>
        <url>https://www.bxwx9.org/</url>
        <!--小说书名-->
        <book-name>#title</book-name>
        <!--章节列表-->
        <chapter-list-selector>.TabCss dd a</chapter-list-selector>
        <!--标题  . 代表找class   #代表找id-->
        <chapter-detail-title-selector>#title</chapter-detail-title-selector>
        <!--内容-->
        <chapter-detail-content-selector>#content</chapter-detail-content-selector>
        <!--前一章-->
        <chapter-detail-prev-selector>#footlink a,2</chapter-detail-prev-selector>
        <!--后一章-->
        <chapter-detail-next-selector>#footlink a,4</chapter-detail-next-selector>
        <!--选取书名目录-->
        <novel-selector>.grid tr</novel-selector>
        <!--判断此书名目录是否有下一页-->
        <novel-next-page-selector>#pagelink .next</novel-next-page-selector>
    </site>

</sites>